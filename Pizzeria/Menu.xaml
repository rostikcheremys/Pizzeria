<Page x:Class="Pizzeria.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="Menu" Width="1200" Height="800" Background="White">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Select Pizza:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <CheckBox Name="MargheritaCheckbox" Content="Margherita"/>
            <CheckBox Name="PepperoniCheckbox" Content="Pepperoni"/>
            <CheckBox Name="VegetarianCheckbox" Content="Vegetarian"/>
            <CheckBox Name="HawaiianCheckbox" Content="Hawaiian"/>
            <Button Content="Order" Click="OrderButton_Click" Margin="0,20,0,10"/>
        </StackPanel>
        <Frame x:Name="MenuFrame"/>
    </Grid>
</Page>