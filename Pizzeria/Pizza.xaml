                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Foreground="White" Text="Order" FontSize="16" FontWeight="Bold"/>
            </Button>
        </Grid>
        
        <Grid Grid.Row="1" Grid.Column="1" Margin="0 15 0 0">
            <Image Source="images/pizza/prosciutto-e-funghi.png" Width="290" Margin="0 15 0 25"/>
            <Label Content="Prosciutto e Funghi" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 10 0 0"/>
            <TextBlock Text="Price: $10" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 25"/>
            <TextBlock Text="Ingredients: Ham, Mushrooms, Cheese, Tomato Sauce" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
