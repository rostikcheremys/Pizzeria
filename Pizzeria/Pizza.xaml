                    </ControlTemplate>
                </Button.Template>
                <TextBlock Foreground="White" Text="Order" FontSize="16" FontWeight="Bold"/>
            </Button>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" Margin="0 15 0 0">
            <Image Source="images/pizza/four-cheese.png" Width="290" Margin="0 15 0 25"/>
            <Label Content="Four Cheese" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 10 0 0"/>
            <TextBlock Text="Price: $10" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 25"/>
            <TextBlock Text="Ingredients: Mozzarella, Parmesan, Feta, Gorgonzola" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <Button Width="120" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin=" 0 0 0 -50">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border CornerRadius="20" Background="Brown" x:Name="border">
