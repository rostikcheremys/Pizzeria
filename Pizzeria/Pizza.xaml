            <TextBlock x:Name="HawaiianIngredients" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <Button x:Name="HawaiianOrder" Width="120" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin=" 0 0 0 -50" Click="OrderPizza_Click">
